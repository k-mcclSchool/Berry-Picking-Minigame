<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="324dp"
        android:background="#004000"
        android:elevation="1dp"
        app:layout_constraintEnd_toStartOf="@+id/berryscore"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/berry" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="76dp"
        android:background="#004000"
        android:elevation="1dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintEnd_toStartOf="@+id/berryscore"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/berry" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="120dp"
        android:background="#004000"
        android:elevation="1dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintEnd_toStartOf="@+id/berryscore"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/berry" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="380dp"
        android:background="#004000"
        android:elevation="1dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintEnd_toStartOf="@+id/berryscore"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/berry" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="220dp"
        android:background="#004000"
        android:elevation="1dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintEnd_toStartOf="@+id/berryscore"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/berry" />

    <TextView
        android:id="@+id/berryscore"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="120dp"
        android:elevation="10dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/centerTimer"
        app:layout_constraintStart_toEndOf="@+id/centerTimer" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="116dp"
        android:elevation="10dp"
        android:text="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/centerTimer"
        app:layout_constraintEnd_toEndOf="@+id/centerTimer" />

    <TextView
        android:id="@+id/centerTimer"
        android:layout_width="188dp"
        android:layout_height="65dp"
        android:elevation="40dp"
        android:text="Center Box"
        android:visibility="visible"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="835dp"
        android:layout_height="393dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/berrybackground" />

</androidx.constraintlayout.widget.ConstraintLayout>